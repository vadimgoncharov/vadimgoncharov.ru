root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.yml,Dokerfile*,.babelrc,.eslintrc,bower.json,package.json,*.conf}]
indent_size = 2

[*.{html}]
indent_size = 4

[*.{scss,css}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4
